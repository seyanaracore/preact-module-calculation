{
	"compilerOptions": {
		"target": "ES2016",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"strict": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		}
	},
	"ts-node": {
		"esm": true
	},
	"include": ["node_modules/vite/client.d.ts", "src", "filter-by-module-ids.ts", "db"]
}
